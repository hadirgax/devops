  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host", "0.0.0.0",
        "--port", "8711",
        "--workers", "4",
        "--reload",
      ],
      "jinja": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/app:${env:PYTHONPATH}",
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
